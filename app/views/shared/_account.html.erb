<% unless signed_in? %>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <%= f.label :email %>
	  <%= f.email_field :email, :size => 15 %>

	  <%= f.label :password %>
	  <%= f.password_field :password, :size => 15 %>

	  <%= f.submit "Sign in" %>
	<% end %>
<% else %>
	<%= link_to 'My Trackers', trackers_url %>
	<%= link_to 'My Account', edit_user_registration_url %>
	<%= link_to 'Sign Out', destroy_user_session_url %>
<% end %>