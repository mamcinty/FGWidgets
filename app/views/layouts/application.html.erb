<!DOCTYPE html>
<html>
<head>
	<title>FGWidgets</title>

	<meta name="viewport" content="width = device-width,initial-scale = 1.0"> 

	<%= stylesheet_link_tag 'grid_min', 'base', :media => 'all' %>
	<%= stylesheet_link_tag 'mobile', :media => 'handheld and screen and (max-device-width: 480px), screen and (max-width: 600px)' %>
	<%= stylesheet_link_tag 'formtastic', 'formtastic_changes' %>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag :cocoon %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="body-wrapper">
		<!--[if IE 6]><div id="id6"><![endif]-->
		<!--[if gt IE 6]><div id="ie"><![endif]-->

		<!--HEADER-->
		<div id="hd" class="container_12">
			<div id="logo" class="grid_6">
				<a href="/"><h1>FGWidgets</h1></a>
			</div>
			<div id="account" class="grid_6">
				<%= render :partial => 'shared/account' %>
			</div>
		</div><!--END OF HEADER-->
		
		<!--MAIN CONTENT AREA-->
		<div class="container_12">
			
			<!--BODY CONTENT-->
			<div id="content" class="grid_9">
				<%= yield %>
			</div><!--END OF BODY CONTENT-->
		</div><!--END OF MAIN CONTENT AREA-->
		
		<div class="container_12">
			<div id="ft" class="grid_12">
				<div class="grid_12">
					<p>This service is neither endorsed or provided by FirstGiving.com</p>
				</div>
			</div><!--END OF FOOTER-->
		</div>

		<!--[if gte IE 6]></div><![endif]-->
		<!--[if IE 6]></div><![endif]-->
	</div>
</body>
</html>